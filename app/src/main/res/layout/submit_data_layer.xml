<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/khasra_text_dailog"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="@string/selected_area_is"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/khasra_number_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/khasra_text_dailog"
            android:background="@color/appColor"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/khasra_number_dialog"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/capture_image"
                android:textSize="11sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/camera_image"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/camera" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/remarks"
                android:textSize="11sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/remarks_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/line_background"
                android:hint="@string/enter_remarks_here"
                android:paddingStart="@dimen/dp_10"
                android:textColor="@color/appColor"
                android:textSize="14sp" />

            <Button
                android:id="@+id/save_offline_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/appColor"
                android:text="@string/save_offline"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/cancal_button_dialog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/appColor"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/submit_button_dialog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/appColor"
                    android:text="@string/submit"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
