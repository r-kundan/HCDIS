<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.AdminReportSectionScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dis_text_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".7"
                        android:fontFamily="@font/robo"
                        android:gravity="center"
                        android:text="District Dashboard"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:background="@color/appColor" />


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/card_zero_total_point_dis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_new_built_up_area_points"
                                    android:textAlignment="center"
                                    android:textColor="@color/appColor"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <com.robinhood.ticker.TickerView
                                android:id="@+id/total_builtup_count_dis"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:shadowColor="@android:color/black"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2"
                                android:text="--"
                                android:textColor="@color/appColor"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:typeface="monospace"
                                app:ticker_animationDuration="1500"
                                app:ticker_defaultCharacterList="number" />


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_5">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/card_for_total_verified_records"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.3"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentEnd="true"
                                    android:rotation="45"
                                    android:src="@drawable/verified" />

                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/total_verified_record_dis"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:shadowColor="@android:color/black"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="2"
                                    android:text="--"
                                    android:textColor="@color/green"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace"
                                    app:ticker_animationDuration="1500"
                                    app:ticker_defaultCharacterList="number" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/total_verified_record_dis"
                                    android:fontFamily="@font/robo"
                                    android:text="@string/total_verified_records"
                                    android:textAlignment="center"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:id="@+id/card_two_unverified_record"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.3"
                                android:orientation="vertical">

                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/total_unverified_record_dis"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:gravity="center"
                                    android:shadowColor="@android:color/black"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="2"
                                    android:text="--"
                                    android:textColor="@color/red"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace"
                                    app:ticker_animationDuration="1500"
                                    app:ticker_defaultCharacterList="number" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/total_unverified_record_dis"
                                    android:fontFamily="@font/robo"
                                    android:text="@string/total_unverified_records"
                                    android:textAlignment="center"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_download_report"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:padding="@dimen/dp_16"
                            android:src="@drawable/survey" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="District Wise Report"
                                android:textAlignment="center"
                                android:textColor="@color/red"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View &amp; Download Report"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="11sp" />


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</LinearLayout>