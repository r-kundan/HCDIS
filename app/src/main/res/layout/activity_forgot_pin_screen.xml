<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CitizenModule.ForgotPinScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/appColor"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/department_of_town_amp_country_planning_haryana"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/brown_background"
        android:elevation="@dimen/dp_2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D8D4D4"
            android:gravity="start"
            android:padding="@dimen/dp_15"
            android:text="@string/forgot_pin"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/security_ques_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/appColor">

                <EditText
                    android:id="@+id/linked_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/storke_background"
                    android:drawableStart="@drawable/ic_baseline_phone_android_24"
                    android:hint="@string/mobile_number"
                    android:inputType="text"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/select_security_question"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/key" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/storke_background"
                android:orientation="horizontal"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/linkedQuestionsSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/dp_10" />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/appColor">

                <EditText
                    android:id="@+id/linkedAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/storke_background"
                    android:drawableStart="@drawable/baseline_question_answer_24"
                    android:hint="@string/answer"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_pin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/appColor">

                <EditText
                    android:id="@+id/new_pin_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/storke_background"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:hint="@string/new_pin"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/appColor">

                <EditText
                    android:id="@+id/confirm_pin_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/storke_background"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:hint="@string/confirm_pin"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:backgroundTint="@color/orange"
                    android:drawableLeft="@drawable/baseline_keyboard_double_arrow_left_24"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/setButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_5"
                    android:backgroundTint="@color/green"
                    android:drawableEnd="@drawable/baseline_keyboard_double_arrow_right_24"
                    android:text="@string/send"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
