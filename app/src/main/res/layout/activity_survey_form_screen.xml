<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".screens.SurveyFormScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/g_fasal_title_ll"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/survey_uid"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="0dp"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:text="@string/space"-->
                    <!--                        android:textAlignment="center"-->
                    <!--                        android:textColor="@color/red"-->
                    <!--                        android:textSize="@dimen/sp_10"-->
                    <!--                        android:textStyle="bold" />-->
                    <TextView
                        android:id="@+id/survey_n_d_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/survey_n_t_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/survey_n_v_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/survey_khasra_murba_number"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/space"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/survey_form"
            android:textColor="@color/appColor"
            android:textSize="14sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/appColor" />

        <LinearLayout
            android:id="@+id/floorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/verified_area_sq_mtr"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/verifiedArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/line_background"
                android:enabled="false"
                android:hint="@string/enter_area"
                android:paddingStart="@dimen/dp_10"
                android:textColor="@color/appColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/floors_details"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/storke_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/floorSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="@dimen/dp_10" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/structure_type_kucha_pucca"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/storke_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/structureType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="@dimen/dp_10" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/land_type"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/storke_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/landType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="@dimen/dp_10" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/attach_land_images"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:layout_margin="@dimen/dp_5">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_one"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/add_img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/land_image_form_10_15_meter_distance"
                        android:textAlignment="center"
                        android:textSize="9sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_two"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/add_img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/second_land_image"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:layout_margin="@dimen/dp_5">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_three"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/add_img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/third_land_image"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_four"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/add_img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fourth_land_image"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/attach_nba_new_built_up_area_video"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/minimum_15_seconds_video_is_required"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="@dimen/dp_5"
            android:elevation="@dimen/dp_5"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:src="@drawable/video_marketing" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/minimum_15_seconds_land_video"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:text="Built Up Area Status *"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/appcolor" />


                </LinearLayout>

                <RadioGroup
                    android:id="@+id/auth_unauth_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/auth_status_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/authorization"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/unauth_status_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/unauthorization"
                        android:textStyle="bold" />

                </RadioGroup>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/auth_unauth_reason_ll_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_margin="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_reason_auth_unauth_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/select_reason"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/select_feedback_spinner"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/line_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/reason"
                        android:textColor="@color/appColor"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:drawableEndCompat="@drawable/drop_down_arrow" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@string/owner_name"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <EditText
            android:id="@+id/owner_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="5dp"
            android:background="@drawable/line_background"
            android:hint="Enter Owner Name"
            android:inputType="textCapWords"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/appColor"
            android:textSize="14sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@string/nearby_landmarks"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <EditText
            android:id="@+id/landmarks_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="5dp"
            android:background="@drawable/line_background"
            android:hint="@string/enter_nearby_landmarks"
            android:inputType="textCapWords"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/appColor"
            android:textSize="14sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@string/remarks"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/remarks_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="5dp"
            android:background="@drawable/line_background"
            android:hint="@string/enter_remarks_here"
            android:inputType="textCapWords"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/appColor"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/feedbackOthersEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="5dp"
            android:background="@drawable/line_background"
            android:hint="@string/enter_feedback"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/appColor"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/update_point_ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">


            <Button
                android:id="@+id/update_record_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/update_record" />

            <Button
                android:id="@+id/verify_point_offline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="Save In OutBox" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/add_new_point_ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">


            <Button
                android:id="@+id/add_record_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:text="@string/add_record" />


            <Button
                android:id="@+id/save_new_point_offline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:text="@string/add_new_record_offline" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>