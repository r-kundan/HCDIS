<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.ChooseAreaScreen">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo" />

        </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/appColor"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/app_logo_new"
                    app:civ_border_width="2dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/login_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/login_user_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/login_user_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="@color/grey" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/district_name_"
                android:textColor="@color/appColor"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/spinner_dis_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/line_background"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/tap_here_to_select_district_name"
                android:textColor="@color/appColor"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:text="@string/tehsil_name"
                android:textColor="@color/appColor"
                android:textSize="11sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/spinner_tehsil_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/line_background"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/tap_here_to_select_tehsil_name"
                android:textColor="@color/appColor"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/village_name"
                android:textColor="@color/appColor"
                android:textSize="11sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/spinner_village_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/line_background"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/tap_here_to_select_village_name"
                android:textColor="@color/appColor"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />


            <Button
                android:id="@+id/continue_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@color/appColor"
                android:text="@string/continue_"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>