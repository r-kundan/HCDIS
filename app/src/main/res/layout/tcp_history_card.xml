<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/history_date"
           android:gravity="center"
           android:text="Date:- 22/02/2023"
           android:textColor="@color/white"
           android:background="@color/green"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_below="@+id/history_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/history_gisId"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/space"
                android:textAlignment="center"
                android:textSize="@dimen/sp_10" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/history_n_d_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/space"
                android:textAlignment="center"
                android:textSize="@dimen/sp_10" />


            <TextView
                android:textColor="@color/black"
                android:id="@+id/history_n_t_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/space"
                android:textAlignment="center"
                android:textSize="@dimen/sp_10" />


            <TextView
                android:textColor="@color/black"
                android:id="@+id/history_n_v_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/space"
                android:textAlignment="center"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/history_khasra_murba_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/space"
                android:textAlignment="center"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/history_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/space"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/history_verified_by"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/space"
                android:textAlignment="center"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/appColor" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                tools:ignore="NestedWeights">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/history_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/app_logo"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/history_image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/app_logo"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/history_image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/app_logo"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/history_image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/app_logo"/>
            </LinearLayout>





        </LinearLayout>


    </LinearLayout>
   </RelativeLayout>

</androidx.cardview.widget.CardView>